@model WebApplication19.Models.ViewModels.PaymentViewModel

@{
    ViewData["Title"] = "CompleteOrder";
}

<h1>CompleteOrder</h1>

<h4>Payment</h4>
<hr />
@if (TempData["message"] is not null)
{
    <div class="text-danger">
        @TempData["message"]
    </div>
}
<div class="row">
    <div class="col-md-4">
        <form asp-action="CompleteOrder" method="post" class="form-inline">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CardNumber" class="control-label"></label>
                <div class="row">
                    <div class="col-md-3">
                        <input asp-for="CardNumber1" class="form-control" />
                        <span asp-validation-for="CardNumber1" class="text-danger"></span>
                    </div>
                    <div class="col-md-3">
                        <input asp-for="CardNumber2" class="form-control" />
                        <span asp-validation-for="CardNumber2" class="text-danger"></span>
                    </div>
                    <div class="col-md-3">
                        <input asp-for="CardNumber3" class="form-control" />
                        <span asp-validation-for="CardNumber3" class="text-danger"></span>
                    </div>
                    <div class="col-md-3">
                        <input asp-for="CardNumber4" class="form-control" />
                        <span asp-validation-for="CardNumber4" class="text-danger"></span>
                    </div>
                </div>
                <span asp-validation-for="CardNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Captcha" class="control-label"></label>
                <br />
                <span class="text-danger font-italic">@TempData["captcha"]</span>
                <input asp-for="Captcha" class="form-control" value="" />
                <span asp-validation-for="Captcha" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
